# Cria uma nova opção de configuração chamada 'BOARD_MACROKEYBOARD':
config BOARD_MACROKEYBOARD
    bool "macrokeyboard"
    # A configuração só pode ser ativada se o SoC for um NRF52840-QIAA (em 'macrokeyboard_defconfig'):
    depends on SOC_NRF52840_QIAA
